<% include ../partials/header %>
	
	<h2><%= title %></h2>

	<% while( message = flash.shift() ){ %>
		<div class="alert alert-<%= message.type %>" role="alert"><%= message.message %></div>
	<% } %>

	<table class='table table-bordered table-striped'>
		<thead><tr><th>Nome</th><th></th></tr></thead>
		<tbody>
			<% for(indice in clientes){ %>
			<tr>
				<td><a href='/cliente/<%= clientes[indice]._id %>'><%= clientes[indice].nome %></a></td>
				<td><form action="/cliente/<%= clientes[indice]._id %>?_method=DELETE" method='POST'><input type='submit' value='Excluir' class='btn btn-danger' /></form></td>
			</tr>
			<% } %>
		</tbody>
	</table>

	<a class='btn btn-primary' href='/cliente/' >Cadastrar cliente</a>

<% include ../partials/footer %>